<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Chrome Google Smoke test">

    <test name="hurtMePlenty">
        <parameter name="browser" value="${browser}"/>
        <classes>
            <class name="com.epam.framework.testCase.HurtMePlenty">
                <methods>
                    <include name="hurtMePlenty"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="hardcore">
        <parameter name="browser" value="${browser}"/>
        <classes>
            <class name="com.epam.framework.testCase.Hardcore">
                <methods>
                    <include name="hardcore"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>